{
  "manifest_version": 3,
  "name": "Bible Verse Tooltip",
  "version": "1.0",
  "description": "Shows Bible verse tooltips on hover over verse references.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["bible.js", "content.js"],
      "css": ["styles.css"]
    }
  ]
}
